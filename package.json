{
  "name": "claude-code-toggle",
  "version": "1.0.0",
  "description": "TUI application to toggle Claude Code settings configurations",
  "type": "module",
  "bin": {
    "claude-code-toggle": "./dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target node --format esm && chmod +x dist/index.js",
    "dev": "bun run src/index.ts",
    "format": "biome format --write .",
    "lint": "biome lint .",
    "check": "biome check --write .",
    "prepublishOnly": "bun run build"
  },
  "dependencies": {
    "@inquirer/prompts": "^8.1.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@types/node": "^25.0.3",
    "typescript": "^5.9.3"
  },
  "keywords": [
    "claude",
    "claude-code",
    "settings",
    "toggle",
    "tui",
    "cli"
  ],
  "author": "Ayas Nasih",
  "repository": {
    "type": "git",
    "url": "https://github.com/ayarse/claude-code-toggle"
  },
  "license": "MIT",
  "engines": {
    "node": ">=18"
  }
}
